!execute as @n[tag=bore] at @s run 
	summon block_display ~ ~-.01 ~ 
		{
		Passengers:[{
			id:"minecraft:chest_minecart",
			NoGravity:1b,
			Silent:1b,
			Invulnerable:1b,
			Tags:["bore_chest"],
			DisplayState:{Name:"minecraft:cactus"},
			DisplayOffset:8.4
			}]
		}

!execute 
	as @n[tag=bore] at @s run data modify entity @n[tag=bore_chest] 
		Rotation set from entity @s Rotation

!execute as @n[tag=bore] at @s run 
	tag @s remove bore